<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="550.0" prefWidth="450.0" styleClass="blue_panel" stylesheets="@Styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.myjavafx.CustomerHomePageController">
    <center>
        <VBox fx:id="contentArea" alignment="CENTER" spacing="10" style="-fx-padding: 20;">
           <Label fx:id="welcomeLabel" style="-fx-font-size: 18; -fx-padding: 10;" text="Welcome, Customer!" />
            <Button fx:id="viewProductsButton" onAction="#HandleViewProducts" text="View Products" />
            <Button fx:id="viewProfileButton" onAction="#HandleViewProfile" text="View Profile" />
         <Button fx:id="viewBalance" onAction="#handleViewBalance" text="View Balance" />
         <Button fx:id="ManageCart" onAction="#handleManageCart" text="Manage Cart" />
         <Button fx:id="Checkout" onAction="#handleCheckout" text="CheckOut" />
            <Button fx:id="logoutButton" onAction="#handleLogout" text="Logout" />
        </VBox>
    </center>
</BorderPane>

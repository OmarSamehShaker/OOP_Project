<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox minHeight="450.0" prefWidth="400.0" spacing="10" styleClass="blue_panel" stylesheets="@Styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.myjavafx.Admin_Update_Profile_Controller">
    <Label alignment="CENTER" prefHeight="32.0" prefWidth="406.0" style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Update Profile" />

    <Label text="Username:">
        <font>
            <Font size="14.0" />
        </font>
        <VBox.margin>
            <Insets left="15.0" top="5.0" />
        </VBox.margin>
    </Label>
    <TextField fx:id="usernameField" />

    <Label text="Date of Birth:">
        <font>
            <Font size="14.0" />
        </font>
        <VBox.margin>
            <Insets left="15.0" top="5.0" />
        </VBox.margin>
    </Label>
    <TextField fx:id="dobField" />

    <Label text="Role:">
        <font>
            <Font size="14.0" />
        </font>
        <VBox.margin>
            <Insets left="15.0" top="5.0" />
        </VBox.margin>
    </Label>
    <TextField fx:id="roleField" />

    <Label text="Working Hours:">
        <font>
            <Font size="14.0" />
        </font>
        <VBox.margin>
            <Insets left="15.0" top="5.0" />
        </VBox.margin>
    </Label>
    <TextField fx:id="workingHoursField" />

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="saveButton" onAction="#handleSaveButtonAction" text="Save" />
        <Button fx:id="cancelButton" onAction="#handleCancelButtonAction" text="Cancel" />
        <Button onAction="#handleReturnButtonAction" text="Return" />
    </HBox>
</VBox>

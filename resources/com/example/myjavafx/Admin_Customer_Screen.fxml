<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="350.0" prefWidth="500.0" styleClass="blue_panel" stylesheets="@Styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myjavafx.Admin_Customer_Screen_Controller">
   <children>
      <VBox alignment="CENTER" spacing="20" layoutX="50.0" layoutY="50.0">

         <!-- Admin Section Title -->
         <Text text="Admin Section" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

         <!-- Admin Buttons -->
         <Button fx:id="adminLoginButton" text="Admin Login" onAction="#handleAdminLogin" prefWidth="200.0"/>

         <!-- Spacer between Admin and Customer -->
         <VBox spacing="20" />

         <!-- Customer Section Title -->
         <Text text="Customer Section" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

         <!-- Customer Buttons -->
         <Button fx:id="customerLoginButton" text="Customer Login" onAction="#handleCustomerLogin" prefWidth="200.0"/>
         <Button fx:id="customerSignupButton" text="Customer Signup" onAction="#handleCustomerSignup" prefWidth="200.0"/>

      </VBox>
   </children>
</AnchorPane>

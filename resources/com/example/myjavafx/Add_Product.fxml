<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="blue_panel" stylesheets="@Styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myjavafx.Add_Product_Controller">
    <children>
        <HBox alignment="CENTER_LEFT" layoutX="37.0" layoutY="99.0" prefHeight="50.0" prefWidth="348.0" stylesheets="@Styles.css">
            <children>
                <TextField fx:id="product_name" promptText="Product Name" styleClass="tf_box" stylesheets="@Styles.css" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="34.0" layoutY="149.0" prefHeight="50.0" prefWidth="342.0" stylesheets="@Styles.css">
            <children>
                <TextField fx:id="product_id" prefWidth="338.0" promptText="Product Id" styleClass="tf_box" stylesheets="@Styles.css" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="31.0" layoutY="200.0" prefHeight="50.0" prefWidth="348.0" stylesheets="@Styles.css">
            <children>
                <TextField fx:id="product_price" promptText="Product Price" styleClass="tf_box" stylesheets="@Styles.css" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="31.0" layoutY="257.0" prefHeight="50.0" prefWidth="348.0" stylesheets="@Styles.css">
            <children>
                <TextField fx:id="category" promptText="Category" styleClass="tf_box" stylesheets="@Styles.css" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <Button fx:id="addProductButton" layoutX="16.0" layoutY="335.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="342.0" text="Add Product" onAction="#handleAddProduct" />
        <Button fx:id="returnButton" layoutX="462.0" layoutY="335.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="106.0" text="Return" onAction="#handleReturn" />
    </children>
</AnchorPane>
